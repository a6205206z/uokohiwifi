<% content_for :application do %>
            <h3 class="page-title">
                路由器通讯记录
            </h3>
            <!-- BEGIN PAGE HEADER-->
            <div class="row">
                <div class="col-md-12">
                    <!-- BEGIN EXAMPLE TABLE PORTLET-->
                    <div class="portlet box grey-cascade">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-globe"></i>路由器通讯记录
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div class="table-toolbar">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="btn-group">
                                            <a href="/router" data-toggle="modal">
                                            <button class="btn green" data-toggle="modal"
                                                    href="#addRoute">
                                                返回首页 <i class="fa fa-back"></i>
                                            </button>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <table class="table table-striped table-bordered table-hover" >
                                <thead>
                                <tr>
                                    <th>
                                        路由器MAC
                                    </th>
                                    <th>
                                        通讯时间
                                    </th>
                                </tr>
                                </thead>
                                <tbody>
									<% @ios.each do |i| %>
                                <tr class="odd gradeX">
                                    <td>
                                        <%= i.mac_address %>
                                    </td>
                                    <td>
                                        <a href="#">
                                            <%= i.recv_time.localtime %> </a>
                                    </td>
                                </tr>
 								<% end %>                               
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- END EXAMPLE TABLE PORTLET-->
                </div>
            </div>
<% end %>